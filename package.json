{
  "name": "libcrowds",
  "version": "1.0.0-beta.4",
  "description": "A Vue.js frontend for PYBOSSA.",
  "author": "Alex Mendes <alexanderhmendes@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "backpack dev",
    "build": "nuxt build && backpack build",
    "start": "cross-env NODE_ENV=production node build/main.js",
    "precommit": "npm run lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "unit": "cross-env NODE_ENV=testing jest --coverage",
    "unit:nocoverage": "cross-env NODE_ENV=testing jest"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "nuxt": "^1.0.0-rc3",
    "source-map-support": "^0.4.15"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.26.0",
    "backpack-core": "^0.4.3",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "jest-vue-preprocessor": "^1.2.0",
    "jsdom": "^11.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/test/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/test/assetsTransformer.js",
      "(.*)/local.config$": "<rootDir>/test/test.local.config.js"
    },
    "notify": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!vue-awesome)"
    ],
    "collectCoverageFrom": [
      "components/**/*.{js,vue}",
      "pages/**/*.{js,vue}",
      "plugins/**/*.{js,vue}",
      "store/**/*.{js,vue}",
      "utils/**/*.{js,vue}"
    ],
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "testRegex": "/test/unit/specs/.*(test|spec)\\.jsx?$"
  }
}
