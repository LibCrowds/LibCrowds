{
  "name": "libcrowds",
  "version": "1.0.0-beta.4",
  "description": "A Vue.js frontend for PYBOSSA.",
  "author": "Alex Mendes <alexanderhmendes@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "backpack dev",
    "build": "nuxt build && backpack build",
    "start": "cross-env NODE_ENV=production node build/main.js",
    "precommit": "npm run lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "unit": "cross-env BABEL_ENV=test jest --coverage",
    "unit:nocoverage": "cross-env BABEL_ENV=test jest"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "nuxt": "^1.0.0-rc3",
    "source-map-support": "^0.4.15"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "backpack-core": "^0.4.1",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "jest-vue-preprocessor": "^1.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/test/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/test/assetsTransformer.js",
      "(.*)/siteConfig$": "<rootDir>/test/testSiteConfig.js",
      "^./src/(.*)$": "<rootDir>/src/$1"
    },
    "notify": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!vue-awesome)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,vue}",
      "!src/main.js",
      "!src/router/index.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "<rootDir>/test/unit/coverage",
    "testRegex": "/test/unit/specs/.*(test|spec)\\.jsx?$"
  }
}
